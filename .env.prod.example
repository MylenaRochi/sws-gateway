# Production Environment Configuration for SWS Gateway
# Copy this file to .env.prod and update with your production values

# Application Configuration
PORT=8080
CONTEXT_PATH=/api/v1

# Database Configuration
DATABASE_URL=jdbc:postgresql://your-prod-db-host:5432/sws_gateway
DATABASE_USERNAME=sws_gateway_user
DATABASE_PASSWORD=your_secure_password
DATABASE_NAME=sws_gateway

# Database Pool Configuration
DB_POOL_MAX_SIZE=20
DB_POOL_MIN_IDLE=5

# Logging Configuration
LOG_FILE_PATH=/var/log/sws-gateway/application.log

# Gateway Configuration
PROXY_TIMEOUT=30000
PROXY_MAX_CONNECTIONS=100
CONSUMPTION_BATCH_SIZE=100

# JVM Configuration (for Docker)
JAVA_OPTS=-Xms512m -Xmx1024m -XX:+UseG1GC -XX:G1HeapRegionSize=16m

# SSL Configuration (if using HTTPS)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Monitoring and Alerting
PROMETHEUS_ENABLED=true
HEALTH_CHECK_ENABLED=true

# Security Configuration
SECURE_COOKIES=true
CSRF_PROTECTION=false

# External Service URLs (if any)
# EXTERNAL_SERVICE_URL=https://api.external-service.com